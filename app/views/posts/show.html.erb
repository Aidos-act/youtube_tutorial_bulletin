<div class="col-md-8 col-md-offset-2">
	<div class="message-show">
		<h2> <%= @post.title %> </h2>
		<p class="message-posted-by"> Posted by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %></p>

		<p class="message-desc"> <%= @post.description %> </p>



		<h3> Comments </h3>

		<%= render @post.comments %>

		<h3 class="reply-to-msg"> Reply to a Post</h3>

		<%= render 'comments/form' %>

		<div class="links btn-group">

			<%= link_to "Back" , root_path , class:"btn btn-default" %>
			<% if user_signed_in?%>
				<% if can? :manage, @post %>
					<%= link_to "Edit" , edit_post_path(@post), class:"btn btn-default" %>
					<%= link_to "Delete" , post_path(@post), method: :delete, data: {confirm: "Are you sure?"} , class:"btn btn-default" %>
				<% end %>
			<% end %>
		</div>	
	</div>	
</div>